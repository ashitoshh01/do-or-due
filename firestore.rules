rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the specific admin
    function isAdmin() {
      return request.auth != null && (request.auth.token.email == 'admin@doordue.com' || request.auth.token.email == 'official@doordue.com');
    }

    // Allow users to access their own data
    // Admin can access ALL data
    // Leaderboard needs to read all users (simplified for prototype)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }

    // Allow Admin to perform Collection Group queries on 'tasks'
    match /{path=**}/tasks/{taskId} {
      allow read, write: if isAdmin();
    }
  }
}
